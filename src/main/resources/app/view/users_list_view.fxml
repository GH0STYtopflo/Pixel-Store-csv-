<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="550.0" prefWidth="650.0" style="-fx-background-color: transparent;" stylesheets="@floating_table.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.controller.UsersListController">

    <children>
        <VBox spacing="20.0" styleClass="floating-container" VBox.vgrow="ALWAYS">
            <children>

                <HBox alignment="CENTER_LEFT">
                    <children>
                        <VBox spacing="5.0">
                            <children>
                                <Label text="User Management" textFill="#3e2723">
                                    <font>
                                        <Font name="System Bold" size="24.0" />
                                    </font>
                                </Label>
                                <Label text="View and manage registered customers" textFill="#8d6e63">
                                    <font>
                                        <Font size="13.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>
                    </children>
                </HBox>

                <TableView fx:id="usersTable" editable="true" styleClass="floating-table" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colId" prefWidth="106.0" text="ID" />
                        <TableColumn fx:id="colName" prefWidth="139.0" text="Username" />
                        <TableColumn fx:id="colBalance" prefWidth="198.0" text="Balance" />
                        <TableColumn fx:id="colRole" prefWidth="103.0" text="Role" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>

                <HBox alignment="CENTER_RIGHT" spacing="15.0">
                    <children>
                        <Button fx:id="btnCloseWindow" mnemonicParsing="false" onAction="#closeWindow" prefHeight="35.0" prefWidth="100.0" style="-fx-background-color: #3e2723; -fx-text-fill: white; -fx-background-radius: 50; -fx-cursor: hand;" text="Close">
                     <padding>
                        <Insets bottom="10.0" left="5.0" right="5.0" top="10.0" />
                     </padding></Button>
                    </children>
                </HBox>

            </children>
            <padding>
                <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
            </padding>
        </VBox>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane prefHeight="680.0" prefWidth="950.0" style="-fx-background-color: transparent;" stylesheets="@cart_style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.controller.CheckoutController">
    <children>
        <HBox spacing="40.0" styleClass="floating-card">
            <children>

                <VBox spacing="25.0" HBox.hgrow="ALWAYS">
                    <children>
                        <HBox alignment="CENTER_LEFT">
                            <children>
                                <VBox spacing="5.0">
                                    <children>
                                        <Label text="Review Cart" textFill="#3E2723">
                                            <font><Font name="System Bold" size="34.0" /></font>
                                        </Label>
                                        <Label text="Items stay in your cart for 24 hours" textFill="#8D6E63" />
                                    </children>
                                </VBox>

                                <Region HBox.hgrow="ALWAYS" />

                                <Button fx:id="clearCartBtn" mnemonicParsing="false" onAction="#handleClearCart" style="-fx-background-color: transparent; -fx-text-fill: #D32F2F; -fx-cursor: hand; -fx-border-color: #D32F2F; -fx-border-radius: 20; -fx-padding: 5 15;" text="Clear Cart">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Button>
                            </children>
                        </HBox>

                        <TableView fx:id="cartTable" editable="true" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colName" prefWidth="196.0" text="PRODUCT" />
                                <TableColumn fx:id="colPrice" prefWidth="171.0" text="PRICE" />
                                <TableColumn fx:id="colQty" prefWidth="48.0" text="QTY" />
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>
                    </children>
                </VBox>

                <VBox maxWidth="360.0" minWidth="320.0" spacing="30.0" styleClass="summary-panel">
                    <children>
                        <VBox spacing="10.0">
                            <children>
                                <Label text="Payment Summary" textFill="#3E2723">
                                    <font><Font name="System Bold" size="22.0" /></font>
                                </Label>
                                <Region prefHeight="1.0" style="-fx-background-color: #D7CCC8;" />
                            </children>
                        </VBox>

                        <VBox spacing="12.0" style="-fx-background-color: white; -fx-background-radius: 20; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.03), 10, 0, 0, 5);">
                            <children>
                                <HBox alignment="CENTER_LEFT">
                                    <children>
                                        <Label text="Current Balance" textFill="#8D6E63" />
                                        <Region HBox.hgrow="ALWAYS" />
                                        <Button fx:id="balanceBtn" onAction="#handleDeposit" style="-fx-background-color: #E8F5E9; -fx-text-fill: #2E7D32; -fx-background-radius: 10; -fx-font-weight: bold; -fx-cursor: hand;" text="+ Top Up" />
                                    </children>
                                </HBox>
                                <Label fx:id="userBalanceLabel" text="\$2,450.00" textFill="#3E2723">
                                    <font><Font name="System Bold" size="28.0" /></font>
                                </Label>
                            </children>
                        </VBox>

                        <VBox spacing="18.0" VBox.vgrow="ALWAYS">
                            <children>
                                <HBox alignment="CENTER_LEFT">
                                    <children>
                                        <Label text="Grand Total" textFill="#3E2723">
                                            <font><Font name="System Bold" size="20.0" /></font>
                                        </Label>
                                        <Region HBox.hgrow="ALWAYS" />
                                        <Label fx:id="totalLabel" text="\$0.00" textFill="#2E7D32">
                                            <font><Font name="System Bold" size="26.0" /></font>
                                        </Label>
                                    </children>
                                </HBox>
                                <Region VBox.vgrow="ALWAYS" />
                                <Label fx:id="msgLabel" alignment="CENTER" prefHeight="18.0" prefWidth="262.0" text="" wrapText="true" />
                            </children>
                        </VBox>

                        <Button fx:id="checkoutBtn" maxWidth="1.7976931348623157E308" onAction="#handleCheckout" prefHeight="60.0" style="-fx-background-color: #3E2723; -fx-text-fill: white; -fx-background-radius: 50; -fx-font-weight: bold; -fx-font-size: 16px; -fx-cursor: hand;" text="COMPLETE PURCHASE" />
                    </children>
                </VBox>

            </children>
            <padding>
                <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
            </padding>
        </HBox>

        <Button fx:id="closeBtn" mnemonicParsing="false" onAction="#handleClose" style="-fx-background-color: #F5F0EE; -fx-background-radius: 30; -fx-min-width: 40; -fx-min-height: 40; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2); -fx-cursor: hand;" text="âœ•" textFill="#5D4037" StackPane.alignment="TOP_RIGHT">
            <StackPane.margin>
                <Insets right="20.0" top="20.0" />
            </StackPane.margin>
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Button>

    </children>
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>
</StackPane>

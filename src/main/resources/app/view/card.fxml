<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane alignment="CENTER" stylesheets="@card_style.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.controller.PhoneCardController">
   <children>
      <VBox fx:id="rootPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="360.0" prefWidth="250.0" styleClass="product-card">
         <children>
            <VBox fx:id="imageBox" alignment="CENTER" prefHeight="180.0" prefWidth="250.0" styleClass="image-container">
               <children>
                  <ImageView fx:id="phoneImage" fitHeight="150.0" fitWidth="154.0" pickOnBounds="true" preserveRatio="true" />
               </children>
            </VBox>

            <VBox spacing="5.0" VBox.vgrow="ALWAYS">
               <padding>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="12.0" />
               </padding>
               <children>
                  <Label fx:id="nameLabel" styleClass="product-title" text="Phone Name">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font></Label>
                  <Label fx:id="descText" alignment="TOP_LEFT" maxHeight="40.0" minHeight="35.0" styleClass="product-desc" text="Product Specs" wrapText="true">
                     <font>
                        <Font size="15.0" />
                     </font></Label>

                  <Region VBox.vgrow="ALWAYS" />

                  <HBox alignment="CENTER_LEFT" spacing="8.0">
                     <children>
                        <Label fx:id="priceLabel" alignment="CENTER" prefHeight="25.0" prefWidth="64.0" styleClass="product-price" text="\$0.00" />
                        <Region HBox.hgrow="ALWAYS" />
                        <VBox prefHeight="200.0" prefWidth="110.0">
                           <children>
      
                              <Button fx:id="detailsBtn" mnemonicParsing="false" onAction="#handleDetails" prefHeight="32.0" prefWidth="120.0" styleClass="btn-details" text="Details">
                                 <VBox.margin>
                                    <Insets />
                                 </VBox.margin>
                              </Button>
      
                              <Button fx:id="buyButton" mnemonicParsing="false" onAction="#handleAddToCart" prefHeight="34.0" prefWidth="120.0" styleClass="btn-primary" stylesheets="@styles.css" text="Add">
                                 <VBox.margin>
                                    <Insets top="10.0" />
                                 </VBox.margin>
                              </Button>
                           </children>
                           <HBox.margin>
                              <Insets top="5.0" />
                           </HBox.margin>
                        </VBox>
                     </children>
                     <VBox.margin>
                        <Insets top="5.0" />
                     </VBox.margin>
                  </HBox>
                  <Label fx:id="msg" alignment="CENTER" maxWidth="1.7976931348623157E308" styleClass="stock-msg" text="" />
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
</StackPane>

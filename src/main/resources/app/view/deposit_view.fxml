<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefWidth="320.0" spacing="20.0" style="-fx-background-color: #E7DED9; -fx-background-radius: 28;" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.controller.DepoController">
    <children>
        <Label styleClass="app-title" text="Deposit Funds" textFill="#3E2723">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>

        <Label fx:id="msgText" text="Enter the amount you wish to add to your Pixel Wallet." textAlignment="CENTER" textFill="#795548" wrapText="true" />

        <TextField fx:id="amountField" prefHeight="50.0" promptText="\$0.00" styleClass="auth-input" stylesheets="@auth_styles.css" />

        <Button fx:id="depositBtn" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onDepoClicked" prefHeight="50.0" styleClass="btn-primary" text="DEPOSIT" />

        <Button mnemonicParsing="false" onAction="#handleCancel" styleClass="btn-auth-secondary" stylesheets="@auth_styles.css" text="Cancel" />
    </children>
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>
</VBox>
